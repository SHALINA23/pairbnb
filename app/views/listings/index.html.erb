<p id="notice"><%= notice %></p>

<h1>Listing Listings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Destination</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Type of property</th>
      <th>Title</th>
      <th>No of guest</th>
      <th>No of bedrooms</th>
      <th>No of beds</th>
      <th>No of bathrooms</th>
      <th>Description of property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.user_id %></td>
        <td><%= listing.destination %></td>
        <td><%= listing.start_date %></td>
        <td><%= listing.end_date %></td>
        <td><%= listing.type_of_property %></td>
        <td><%= listing.title %></td>
        <td><%= listing.no_of_guest %></td>
        <td><%= listing.no_of_bedrooms %></td>
        <td><%= listing.no_of_beds %></td>
        <td><%= listing.no_of_bathrooms %></td>
        <td><%= listing.description_of_property %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

